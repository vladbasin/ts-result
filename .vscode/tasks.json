{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "isBackground": true,
        },
        {
            "label": "Publish",
            "type": "shell",
            "command": "npm publish --access public",
            "group": "build",
            "isBackground": true,
        },
    ]
}